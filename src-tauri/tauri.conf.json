{
  "build": {
    "beforeDevCommand": "npm run dev -- --host=localhost.atavismxi.com",
    "beforeBuildCommand": "npm run build",
    "devPath": "http://localhost.atavismxi.com:4321",
    "distDir": "../dist"
  },
  "package": {
    "productName": "Atavism XI Launcher",
    "version": "0.1.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "open": true
      },
      "process": {
        "all": true
      },
      "os": {
        "all": true
      },
      "http": {
        "all": true,
        "request": true,
        "scope": ["https://www.atavismxi.com/**"]
      },
      "dialog": {
        "all": false,
        "ask": false,
        "confirm": false,
        "message": false,
        "open": true,
        "save": false
      },
      "fs": {
        "all": false,
        "readFile": false,
        "writeFile": false,
        "readDir": false,
        "copyFile": false,
        "createDir": true,
        "removeDir": false,
        "removeFile": false,
        "renameFile": false,
        "exists": true,
        "scope": ["$HOME/**"]
      }
    },
    "bundle": {
      "appimage": {
        "bundleMediaFramework": true
      },
      "active": true,
      "targets": "all",
      "identifier": "com.atavismxi.dev",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ]
    },
    "security": {
      "csp": null
    },
    "updater": {
      "active": true,
      "endpoints": [
        "https://releases.myapp.com/{{target}}/{{arch}}/{{current_version}}"
      ],
      "dialog": false,
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEIzMkQ0NjQ0MzZGMTVENkIKUldSclhmRTJSRVl0czcvZ29CeTUza1JIbTYrb21GOThsY2xGdmUyYkNhMG94U2pTQzcrVTZMMHQK",
      "windows": {
        "installMode": "passive"
      }
    },
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "title": "Atavism XI Installer",
        "width": 800,
        "height": 600
      }
    ]
  }
}
